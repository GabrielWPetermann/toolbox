# Environment Configuration
NODE_ENV=development
PORT=3001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# API Keys (replace with your actual keys)
# BITLY_ACCESS_TOKEN=your_bitly_token_here
# CLOUDCONVERT_API_KEY=your_cloudconvert_key_here

# Database (if needed in the future)
# DATABASE_URL=your_database_url_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,gif,txt,csv,xlsx,md

# Security
# JWT_SECRET=your_jwt_secret_here (if implementing auth)
# ENCRYPTION_KEY=your_encryption_key_here
